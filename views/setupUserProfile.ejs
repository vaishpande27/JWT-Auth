<!DOCTYPE html>
<html>
<head>
  <title>Setup Profile</title>
  <link rel="stylesheet" href="/css/setupUserProfile.css">
</head>
<body>
    <div class="form-container">
        <h2>Setup Your Profile</h2>
        <form action="/user/setup-profile" method="POST" enctype="multipart/form-data">
          <div class="section-header">Personal Information</div>
          
          <div class="form-group">
            <label>Full Name <span class="required-star">*</span></label>
            <div class="input-with-icon">
              <i class="icon fas fa-user"></i>
              <input type="text" name="name" required>
            </div>
          </div>
          
          <div class="form-group">
            <label>Email <span class="required-star">*</span></label>
            <div class="input-with-icon">
              <i class="icon fas fa-envelope"></i>
              <input type="email" value="<%= email %>" readonly>            </div>
          </div>
          
          <div class="form-group">
            <label>Phone Number <span class="required-star">*</span></label>
            <div class="input-with-icon">
              <i class="icon fas fa-phone"></i>
              <input type="text" name="phone" required>
            </div>
          </div>
          
          <div class="section-header">Professional Links</div>
          
          <div class="form-group">
            <label>GitHub <span class="required-star">*</span></label>
            <div class="input-with-icon">
              <i class="icon fab fa-github"></i>
              <input type="text" name="github" required>
            </div>
          </div>
          
          <div class="form-group">
            <label>LinkedIn</label>
            <div class="input-with-icon">
              <i class="icon fab fa-linkedin"></i>
              <input type="text" name="linkedin">
            </div>
          </div>
          
          <div class="form-group">
            <label>Portfolio</label>
            <div class="input-with-icon">
              <i class="icon fas fa-globe"></i>
              <input type="text" name="portfolio">
            </div>
          </div>
          
          <div class="section-header">Documents</div>
          
          <div class="form-group">
            <label>Resume (PDF) <span class="required-star">*</span></label>
            <div class="input-with-icon file-input-container">
              <i class="icon fas fa-file-pdf"></i>
              <input type="file" name="resume" accept=".pdf" required>
            </div>
          </div>
          
          <button type="submit"><i class="fas fa-save btn-icon"></i>Save Profile</button>
        </form>
      </div>
</body>
</html>
