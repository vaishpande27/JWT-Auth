<!DOCTYPE html>
<html>
<head>
  <title>Setup Profile</title>
  <link rel="stylesheet" href="/css/setupUserProfile.css">
</head>
<body>
  <div class="form-container">
    <h2><%= isEdit ? 'Edit Your Profile' : 'Setup Your Profile' %></h2>
<form action="/user/submit-profile" method="POST" enctype="multipart/form-data">
      <div class="section-header">Personal Information</div>

      <div class="form-group">
        <label>Full Name <span class="required-star">*</span></label>
        <input type="text" name="name" value="<%= user?.name || '' %>" required>
      </div>

      <div class="form-group">
        <label>Email <span class="required-star">*</span></label>
        <input type="email" value="<%= user?.email || email %>" readonly>
      </div>

      <div class="form-group">
        <label>Phone Number <span class="required-star">*</span></label>
        <input type="text" name="phone" value="<%= user?.phone || '' %>" required>
      </div>

      <div class="section-header">Professional Links</div>

      <div class="form-group">
        <label>GitHub <span class="required-star">*</span></label>
        <input type="text" name="github" value="<%= user?.github || '' %>" required>
      </div>

      <div class="form-group">
        <label>LinkedIn</label>
        <input type="text" name="linkedin" value="<%= user?.linkedin || '' %>">
      </div>

      <div class="form-group">
        <label>Portfolio</label>
        <input type="text" name="portfolio" value="<%= user?.portfolio || '' %>">
      </div>

      <div class="section-header">Documents</div>

      <% if (isEdit && user?.resume) { %>
        <div class="form-group">
          <label>Current Resume:</label>
          <p><%= user.resume.fileName %></p>
          <label><input type="checkbox" name="deleteResume" value="true"> Delete current resume</label>
        </div>
      <% } %>

      <div class="form-group">
        <label>Resume (PDF) <%= isEdit ? '' : '<span class="required-star">*</span>' %></label>
        <input type="file" name="resume" accept=".pdf" <%= isEdit ? '' : 'required' %>>
      </div>

      <button type="submit"><i class="fas fa-save btn-icon"></i><%= isEdit ? 'Update' : 'Save' %> Profile</button>
    </form>
  </div>
</body>
</html>
